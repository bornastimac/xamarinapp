<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/RootSpecimenInputActivity"
    android:orientation="vertical"
    android:background="@color/backgroundBright">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_weight="1"
        android:layout_marginTop="20dp">
        <TextView
            android:text="@string/SamplingPosition"
            android:textColor="@color/textInAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SamplingPosition"
            android:layout_centerHorizontal="true" />
        <EditText
            android:id="@+id/SamplingPositionText"
            android:textColor="@color/textInAccent"
            android:layout_width="250dp"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:height="50dp"
            android:layout_below="@id/SamplingPosition"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_weight="1">
        <TextView
            android:text="@string/Geolocation"
            android:textColor="@color/textInAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Location"
            android:layout_centerHorizontal="true" />
        <EditText
            android:id="@+id/LocationText"
            android:layout_width="250dp"
            android:textColor="@color/textInAccent"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:height="50dp"
            android:layout_below="@id/Location"
            android:lines="2"
            android:textStyle="italic"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:id="@+id/LocationButton"
            android:src="@drawable/ic_location_searching_black_24dp"
            android:background="@drawable/buttonshaperectangle"
            android:layout_toRightOf="@id/LocationText"
            android:layout_width="50dp"
            android:layout_height="50dp     " />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:layout_weight="1">
        <TextView
            android:text="@string/QR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textInAccent"
            android:id="@+id/QR"
            android:layout_centerHorizontal="true" />
        <EditText
            android:id="@+id/QRText"
            android:layout_width="250dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textColor="@color/textInAccent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="25dp"
            android:height="50dp"
            android:layout_below="@id/QR"
            android:textStyle="italic"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:id="@+id/QRButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_border_outer_black_24dp"
            android:background="@drawable/buttonshaperectangle"
            android:layout_toRightOf="@id/QRText" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="50px"
        android:minHeight="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout4"
        android:layout_weight="1">
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/PhotoView"
            android:layout_centerHorizontal="true"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:maxHeight="200dp"
            android:maxWidth="200dp" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout5"
        android:layout_weight="1">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/SaveButton1"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_done_black_24dp"
            android:background="@drawable/buttonshaperectangle"
            android:layout_marginRight="20.0dp" />
    </RelativeLayout>
</LinearLayout>